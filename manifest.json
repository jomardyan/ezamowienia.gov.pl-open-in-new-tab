{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["https://ezamowienia.gov.pl/*"],
  "action": {
    "default_title": "__MSG_actionTitle__"
  },
  "web_accessible_resources": [
    {
      "resources": ["_locales/en/messages.json", "_locales/pl/messages.json"],
      "matches": ["https://ezamowienia.gov.pl/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://ezamowienia.gov.pl/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
